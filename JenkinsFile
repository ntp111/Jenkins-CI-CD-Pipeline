pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                // Example: Use Maven to build the project
                sh 'mvn clean package'
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Code Analysis') {
            steps {
                sh 'sonar-scanner'
            }
        }
        stage('Security Scan') {
            steps {
                sh 'dependency-check --project myproject --scan ./'
            }
        }
        stage('Deploy to Staging') {
            steps {
                sh 'scp target/*.jar user@staging-server:/path/to/deploy'
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                sh 'curl http://staging-server:8080/health'
            }
        }
        stage('Deploy to Production') {
            steps {
                sh 'scp target/*.jar user@production-server:/path/to/deploy'
            }
        }
    }

    post {
        always {
            mail to: 'ngtuanphong98@gmail.com',
                 subject: "Pipeline ${currentBuild.fullDisplayName} completed",
                 body: "Pipeline ${currentBuild.fullDisplayName} completed with status ${currentBuild.currentResult}",
                 attachLog: true
        }
    }
}
